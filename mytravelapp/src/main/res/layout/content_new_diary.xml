<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_diary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mytravelapp.NewDiary"
    tools:showIn="@layout/activity_new_diary">

    <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Title : "
            android:layout_alignBaseline="@+id/diary_title"
            android:layout_alignBottom="@+id/diary_title"
            android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/diary_date"
        android:layout_alignBottom="@+id/diary_date"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Image : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diary_location"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textSize="15sp"
        android:id="@+id/imageView"/>

    <Button
        android:text="Choose..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diary_location"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:id="@+id/btnImageUpload"/>

    <TextView
        android:text="Example.jpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/diary_title"
        android:id="@+id/imageViewDescription"/>

    <TextView
        android:text="Diary Entry : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/diaryView"
        android:textSize="15sp"
        android:layout_below="@+id/btnImageUpload"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/diary_diary"
        android:layout_alignBaseline="@+id/diaryView"
        android:layout_alignBottom="@+id/diaryView"
        android:layout_toEndOf="@+id/diaryView"
        android:layout_marginStart="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/diary_location"
        android:background="#6699ff"
        android:padding="15dp"
        android:textColor="#0066ff"
        android:textColorHint="#0ff"
        android:textSize="15sp"
        android:hint="Enter Location"
        android:layout_below="@+id/diary_title"
        android:layout_toEndOf="@+id/diaryView"/>

    <EditText
        android:id="@+id/diary_title"
        android:background="#6699ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a diary title"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:textColor="#0066ff"
        android:textColorHint="#0ff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/diary_date"
        android:layout_alignStart="@+id/diary_location"/>

    <EditText
        android:id="@+id/diary_date"
        android:background="#6699ff"
        android:hint="Select Date"
        android:padding="15dp"
        android:textColor="#0066ff"
        android:textColorHint="#0ff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/diary_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/locationView"
        android:text="Location : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/diary_location"
        android:layout_alignBottom="@+id/diary_location"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNewDiary"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageViewDescription"/>

</RelativeLayout>
