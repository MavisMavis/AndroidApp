<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mytravelapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".TitleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Nav_Bar"
            android:label="@string/title_activity_nav__bar"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up">
        </activity>
        <activity
            android:name=".ContentActivity"
            android:label="Keep Diary">
        </activity>
        <activity
            android:name=".NewDiary"
            android:label="@string/title_activity_new_diary"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".diary_layout">
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="Diary Detail"
            android:parentActivityName=".ContentActivity">
        </activity>
        <activity android:name=".EditDiaryDetails">
        </activity>
    </application>

</manifest>